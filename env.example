# .env.example - пример переменных окружения
# Скопируйте этот файл в .env и заполните своими значениями

# ==================== TELEGRAM ====================
# Токен бота от BotFather (@BotFather в Telegram)
# Пример: 5497937168:AAHASDAIlWeh4-8jYvo72eZeq23-1P2DQmaY
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ID администратора для получения уведомлений
ADMIN_ID=123456789

# ==================== OPENAI API ====================
# API ключ от OpenAI (https://platform.openai.com/api-keys)
# Пример: sk-proj-abc1234567890...
OPENAI_API_KEY=your_openai_api_key_here

# Модель OpenAI для использования
OPENAI_MODEL=gpt-3.5-turbo
# Или gpt-4 для более качественных ответов (дороже)

# Максимальное количество токенов в ответе
MAX_TOKENS=1000

# Температура ответов (0 = детерминировано, 1 = творчески)
TEMPERATURE=0.7

# ==================== TELEGRAM PAYMENTS ====================
# Поддерживаемая валюта: USD, EUR, RUB и т.д.
PAYMENT_CURRENCY=USD

# Токен платежной системы (для тестирования можно оставить пустым)
# Будет заполнен позже при интеграции Stripe/Яндекс.Касса
PAYMENT_PROVIDER_TOKEN=

# ==================== ПОДПИСКИ И ЦЕНЫ ====================
# Цены в копейках (сотые доли рубля/доллара)
# Базовая подписка (месячная)
PRICE_BASIC_MONTHLY=29900  # $2.99 или 299 руб
# Премиум подписка (месячная)
PRICE_PREMIUM_MONTHLY=79900  # $7.99 или 799 руб
# VIP подписка (месячная)
PRICE_VIP_MONTHLY=199900  # $19.99 или 1999 руб

# ==================== ЛИМИТЫ ====================
# Лимит сообщений для бесплатных пользователей (в день)
FREE_MESSAGES_LIMIT=5

# Лимит сообщений для Basic подписки (в день)
BASIC_MESSAGES_LIMIT=100

# Лимит сообщений для Premium подписки (в день)
PREMIUM_MESSAGES_LIMIT=500

# Лимит сообщений для VIP подписки (в день)
VIP_MESSAGES_LIMIT=9999

# ==================== БАЗА ДАННЫХ ====================
# Путь к базе данных SQLite (используется для разработки)
DATABASE_URL=sqlite:///./bot_database.db

# Для продакшена используйте PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/telegram_bot_db

# ==================== БОНУСЫ И ЛОЯЛЬНОСТЬ ====================
# Количество бонус-очков за каждую успешную оплату
BONUS_POINTS_PER_PURCHASE=100

# Процент скидки за каждое использование (0.01 = 1%)
LOYALTY_DISCOUNT_PERCENT=0.01

# ==================== ЛОГИРОВАНИЕ ====================
# Уровень логирования: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ==================== РЕЖИМ РАБОТЫ ====================
# Режим разработки (True/False)
DEBUG_MODE=True

# ==================== WEBHOOK (для продакшена) ====================
# URL вебхука для получения обновлений от Telegram
# WEBHOOK_URL=https://yourdomain.com/telegram/webhook

# ==================== РАЗЛИЧНЫЕ ПАРАМЕТРЫ ====================
# Максимальное количество попыток повторения запроса к OpenAI
MAX_RETRIES=3

# Таймаут запроса к OpenAI (в секундах)
REQUEST_TIMEOUT=30

# Включить отладочные сообщения в чате
ENABLE_DEBUG_MESSAGES=False
